{% extends 'base.html.twig' %}

{% block title %}Travel
{% endblock %}

{% block content %}
    <h1>Travel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ travel.title }}</td>
            </tr>
            <tr>
                <th>Departure</th>
                <td>{{ travel.departure ? travel.departure|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Distance_traveled</th>
                <td>{{ travel.distanceTraveled }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ travel.id }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ travel.created ? travel.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_travel_index') }}">back to list</a>

    <a href="{{ path('admin_travel_edit', {'id': travel.id}) }}">edit</a>

    {{ include('admin/travel/_delete_form.html.twig') }}
{% endblock %}
