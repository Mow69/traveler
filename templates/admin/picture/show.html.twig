{% block title %}Picture
{% endblock %}

{% block content %}
    <h1>Picture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Caption</th>
                <td>{{ picture.caption }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ picture.path }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ picture.id }}</td>
            </tr>
