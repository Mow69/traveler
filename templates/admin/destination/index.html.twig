{% extends 'base.html.twig' %}

{% block title %}Destination index
{% endblock %}

{% block content %}
    <h1>Destination index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>City</th>
                <th>Country</th>
{#                <th>Longitude</th>#}
{#                <th>Latitude</th>#}
{#                <th>Id</th>#}
                <th>Created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for destination in destinations %}
                <tr>
                    <td>{{ destination.city ? destination.city : "NULL"}}</td>
                    <td>{{ destination.country ? destination.country.name : "NULL"}}</td>
{#                    <td>{{ destination.longitude }}</td>#}
{#                    <td>{{ destination.latitude }}</td>#}
{#                    <td>{{ destination.id }}</td>#}
                    <td>{{ destination.created ? destination.created|date('d/m/Y') : '' }}</td>
                    <td>
                        <a href="{{ path('admin_destination_show', {'id': destination.id}) }}">show</a>
                        <a href="{{ path('admin_destination_edit', {'id': destination.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_destination_new') }}">Create new</a>
{% endblock %}
